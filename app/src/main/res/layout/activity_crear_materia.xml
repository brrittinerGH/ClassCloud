<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.CrearMateriaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/nombreMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombreMateria"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/profesorMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/profesorMateria"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btGuardarMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/btColor"
            android:text="@string/btGuardarMateria" />

        <Button
            android:id="@+id/btVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/btColor"
            android:text="@string/btVolver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>