<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="MyCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DarkMutedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/muted_button</item>
        <item name="android:textColor">#CFD8DC</item> <!-- Light grey text -->
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ModernInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:textColor">#263238</item> <!-- Dark grey text -->
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ModernRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:textColor">#263238</item> <!-- Dark grey text -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
